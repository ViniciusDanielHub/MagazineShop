type Product @model {
  id: ID!
  title: String!
  description: String
  image: String!
  images: [String!]!
  options: [String!]

  avgRating: Float
  ratings: Int

  price: Float!
  oldPrice: Float
  #posts: [Post] @hasMany
}

type CartProduct @model {
  id: ID!
  userSub: String!
  quantity: Int!
  option: String

  productID: ID!
  #posts: [Post] @hasMany
}
